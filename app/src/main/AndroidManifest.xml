<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.practicer.teacherapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity
            android:name=".SplashActivity"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="stateHidden">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".WeekSummaryActivity"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".WeekContentActivity"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity
            android:name=".LessonCompletedActivity"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="stateHidden">
            >
        </activity>
        <activity
            android:name=".HalfTermSummaryActivity"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity android:name=".UploadExcel"
            android:configChanges="keyboard|screenLayout|screenSize|orientation"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="stateHidden">

        </activity>
    </application>

</manifest>