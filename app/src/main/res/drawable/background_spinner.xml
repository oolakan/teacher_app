<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="2dp" android:color="@color/border_blue" />
            <gradient android:angle="90" android:startColor="@color/light_blue" android:endColor="@color/colorPrimary"  />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <solid android:color="@color/border_blue" />
            <stroke android:width="2dip" android:color="@color/colorPrimary" />
            <gradient android:angle="90" android:startColor="@color/light_blue" android:endColor="@color/colorPrimary" />
        </shape>
    </item>
</selector>
